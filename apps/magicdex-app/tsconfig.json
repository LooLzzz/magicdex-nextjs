{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/api": ["./pages/api"],
      "@/api/*": ["./pages/api/*"],
      "@/components": ["./components"],
      "@/components/*": ["./components/*"],
      "@/pages": ["./pages"],
      "@/pages/*": ["./pages/*"],
      "@/public/*": ["./public/*"],
      "@/services": ["./services"],
      "@/services/*": ["./services/*"],
    },
    "jsx": "preserve",
    "jsxImportSource": "@emotion/react",
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "types": ["jest", "node"]
  },
  "include": ["**/*.ts", "**/*.tsx", "**/*.js", "**/*.jsx", "next-env.d.ts"],
  "exclude": [
    "node_modules",
    "jest.config.ts",
    "src/**/*.spec.ts",
    "src/**/*.test.ts"
  ]
}
